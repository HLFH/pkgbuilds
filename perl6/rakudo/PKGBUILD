# Maintainer: Andy Weidenbaum <archbaum@gmail.com>

pkgname=rakudo
pkgver=2015.07.2
pkgrel=1
pkgdesc="Perl 6 compiler for the MoarVM and JVM"
arch=('i686' 'x86_64')
depends=('java-runtime' 'moarvm' 'nqp')
makedepends=('make')
groups=('perl6')
url="https://github.com/rakudo/rakudo"
license=('PerlArtistic')
source=($pkgname-$pkgver.tar.gz::https://codeload.github.com/rakudo/$pkgname/tar.gz/$pkgver)
sha256sums=('97dd10748091e1fdc83b045c2f6df6f3d2bfe8a714633e5f07e9bb092947d348')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  msg2 'Building...'
  perl Configure.pl --prefix=/usr --backends=moar,jvm
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  msg2 'Installing...'
  make DESTDIR="$pkgdir" install
}
