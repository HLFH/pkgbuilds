# Maintainer: Andy Weidenbaum <archbaum@gmail.com>

pkgname=rakudo
pkgver=2015.07.1
pkgrel=1
pkgdesc="Perl 6 compiler for the MoarVM and JVM"
arch=('i686' 'x86_64')
depends=('java-runtime' 'moarvm' 'nqp')
makedepends=('make')
groups=('perl6')
url="https://github.com/rakudo/rakudo"
license=('PerlArtistic')
source=($pkgname-$pkgver.tar.gz::https://codeload.github.com/rakudo/$pkgname/tar.gz/$pkgver)
sha256sums=('fc8bd343353d483718559ae3d719601c88653a88597e98be4a1b6913b7ade3f0')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  msg2 'Building...'
  perl Configure.pl --prefix=/usr --backends=moar,jvm
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  msg2 'Installing...'
  make DESTDIR="$pkgdir" install
}
