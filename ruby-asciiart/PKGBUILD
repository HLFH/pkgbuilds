# Maintainer: Andy Weidenbaum <archbaum@gmail.com>

pkgname=ruby-asciiart
pkgver=0.0.8
pkgrel=1
pkgdesc="A command line tool to turn images into ASCII art"
arch=('any')
depends=('ruby' 'ruby-rainbow' 'ruby-rmagick')
url="https://github.com/nodanaonlyzuul/asciiart"
license=('MIT')
source=(https://rubygems.org/downloads/${pkgname#*-}-${pkgver}.gem)
sha256sums=('0a7783c51b9426a31b504bdb930e2388b90064f8dc39f74ad574441a61518325')
noextract=("${pkgname#*-}-${pkgver}.gem")
provides=('asciiart' 'ruby-asciiart')
conflicts=('asciiart')

package() {
  cd "$srcdir"

  msg 'Installing...'
  gem install \
    --no-user-install \
    --ignore-dependencies \
    -i "$pkgdir$(ruby -rubygems -e'puts Gem.default_dir')" \
    ${pkgname#*-}-$pkgver.gem
}
