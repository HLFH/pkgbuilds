# Maintainer: Andy Weidenbaum <archbaum@gmail.com>

pkgname=pyethereum
pkgver=0.7.49
pkgrel=1
pkgdesc="Ethereum Python client"
arch=('any')
depends=('leveldb' 'python2' 'python2-bitcoin' 'python2-bottle' 'python2-docopt' 'python2-ethereum-serpent' 'python2-leveldb-svn' 'python2-miniupnpc' 'python2-pysha3' 'python2-pytest' 'python2-repoze.lru' 'python2-six' 'python2-structlog' 'python2-waitress')
makedepends=('python2-setuptools')
groups=('ethereum')
url="https://github.com/ethereum/pyethereum"
license=('MIT')
options=(!emptydirs)
source=($pkgname-$pkgver.tar.gz::https://codeload.github.com/ethereum/$pkgname/tar.gz/$pkgver)
sha256sums=('5d39ca67d8ab5410cdf8894cac7a93588bf12f6d0ad8634e268843f37a84a619')

prepare() {
  cd "$srcdir/$pkgname-$pkgver"

  msg 'Fixing Python version...'
  find . -type f -print0 | xargs -0 sed -i 's#/usr/bin/python#/usr/bin/python2#g'
  find . -type f -print0 | xargs -0 sed -i 's#/usr/bin/env python#/usr/bin/env python2#g'
}

building() {
  cd "$srcdir/$pkgname-$pkgver"

  msg 'Building...'
  python2 setup.py build
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  msg 'Installing...'
  python2 setup.py install --root="${pkgdir}" --optimize=1
}
