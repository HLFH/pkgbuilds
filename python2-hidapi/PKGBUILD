# Maintainer: Andy Weidenbaum <archbaum@gmail.com>

pkgname=python2-hidapi
pkgver=0.7.99
pkgrel=1
pkgdesc="A Cython interface to the hidapi from signal11/hidapi"
arch=('i686' 'x86_64')
depends=('libsystemd' 'libusb' 'python2')
makedepends=('cython2' 'python2-setuptools')
url="https://github.com/trezor/cython-hidapi"
license=('unknown')
options=(!emptydirs)
source=(https://pypi.python.org/packages/source/h/${pkgname#python2-}/${pkgname#python2-}-$pkgver-4.tar.gz)
md5sums=('52d4ec46003de28789f426fee3f4ebf2')
sha256sums=('69f3123b7809408a4b0dc3a02c722a072c8f3ed46312dfa826d91cc87d2e4cb9')

build() {
  cd "$srcdir/${pkgname#python2-}-$pkgver-4"

  msg 'Building...'
  python2 setup.py build
}

package() {
  cd "$srcdir/${pkgname#python2-}-$pkgver-4"

  msg 'Installing...'
  python2 setup.py install --root="$pkgdir" --optimize=1
}
