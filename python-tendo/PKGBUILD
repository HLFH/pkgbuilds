# Maintainer: Andy Weidenbaum <archbaum@gmail.com>

pkgname=python-tendo
pkgver=0.2.6
pkgrel=1
pkgdesc="Adds basic functionality that is not (yet) provided by Python"
arch=('any')
depends=('python' 'python-six')
makedepends=('python-setuptools' 'python-tox')
url="https://github.com/pycontribs/tendo"
license=('Python')
options=(!emptydirs)
source=($pkgname-$pkgver.tar.gz::https://codeload.github.com/pycontribs/${pkgname#python-}/tar.gz/$pkgver)
md5sums=('37ff400762401389f4a9d4e1ed588596')
sha256sums=('33ed1707140cc78f8f62c2457763361e56b261d59460d1e50875146c02de4688')

build() {
  cd "$srcdir/${pkgname#python-}-$pkgver"

  msg 'Building...'
  python setup.py build
}

package() {
  cd "$srcdir/${pkgname#python-}-$pkgver"

  msg 'Installing...'
  python setup.py install --root="$pkgdir" --optimize=1
}
