# Maintainer: Andy Weidenbaum <archbaum@gmail.com>

pkgname=python2-aniso8601
pkgver=0.90
pkgrel=1
pkgdesc="A library for parsing ISO 8601 strings"
arch=('any')
depends=('python2')
makedepends=('python2-setuptools')
url="https://bitbucket.org/nielsenb/aniso8601"
license=('GPL3')
options=(!emptydirs)
source=(https://pypi.python.org/packages/source/a/${pkgname#python2-}/${pkgname#python2-}-$pkgver.tar.gz)
md5sums=('468d34d9def2f49e2dfdcdf062ad9f64')
sha256sums=('2c0ec72a4185c2dd05eac0b2faa8d47a0477a17ca0784e1a547e544777116226')

build() {
  cd "$srcdir/${pkgname#python2-}-$pkgver"

  msg 'Building...'
  python2 setup.py build
}

package() {
  cd "$srcdir/${pkgname#python2-}-$pkgver"

  msg 'Installing...'
  python2 setup.py install --root="$pkgdir" --optimize=1
}
