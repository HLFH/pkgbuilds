# Maintainer: Andy Weidenbaum <archbaum@gmail.com>

pkgname=python2-aniso8601
pkgver=0.83
pkgrel=1
pkgdesc="A library for parsing ISO 8601 strings"
arch=('any')
depends=('python2')
makedepends=('python2-setuptools')
url="https://bitbucket.org/nielsenb/aniso8601"
license=('GPL3')
options=(!emptydirs)
source=(https://pypi.python.org/packages/source/a/${pkgname#python2-}/${pkgname#python2-}-$pkgver.tar.gz)
md5sums=('ed9ded305ebb9025065938ac9ef529e2')
sha256sums=('1153cfe2599da556c6ce664b12c0e39659340cc6633a316b34eaac480f276429')

build() {
  cd "$srcdir/${pkgname#python2-}-$pkgver"

  msg 'Building...'
  python2 setup.py build
}

package() {
  cd "$srcdir/${pkgname#python2-}-$pkgver"

  msg 'Installing...'
  python2 setup.py install --root="$pkgdir" --optimize=1
}
